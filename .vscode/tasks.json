// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$ts-webpack-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "group": "watchers"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "watch-tests",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "group": "watchers"
            },
            "group": "build"
        },
        {
            "label": "tasks: watch-tests",
            "dependsOn": [
                "npm: watch",
                "npm: watch-tests"
            ],
            "problemMatcher": []
        },
        {
            "label": "get vscode cli",
            "command": "if [ ! -f '/tmp/code' ]; then wget -O /tmp/code.tar.gz 'https://code.visualstudio.com/sha/download?build=stable&os=cli-alpine-x64' && tar -xf /tmp/code.tar.gz -C /tmp; fi",
            "type": "shell",
            "problemMatcher": [],
            "hide": true
        },
        {
            "label": "run vscode tunnel",
            "command": "/tmp/code tunnel --name 'psalm-vscode-plugin' --accept-server-license-terms",
            "type": "shell",
            "isBackground": true,
            "problemMatcher": [],
            "dependsOn": [
                "get vscode cli"
            ]
        }
    ]
}
